<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Notification Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notificationbell"
                android:contentDescription="Notifications" />

            <TextView
                android:id="@+id/notificationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Enable Notifications"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/notificationSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Dark Mode Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/darkModeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nightmode"
                android:contentDescription="Dark Mode" />

            <TextView
                android:id="@+id/darkModeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Enable Dark Mode"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/darkModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <!-- Account Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                android:contentDescription="Account" />

            <TextView
                android:id="@+id/accountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Manage Account"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/accountButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/next"
                android:contentDescription="Manage Account" />
        </LinearLayout>

        <!-- Language Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/languageIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/language"
                android:contentDescription="Language" />

            <TextView
                android:id="@+id/languageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Language"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/language_options" />
        </LinearLayout>

        <!-- Privacy Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/privacyIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/privacy"
                android:contentDescription="Privacy" />

            <TextView
                android:id="@+id/privacyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Privacy Settings"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/privacyButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/next"
                android:contentDescription="Privacy Settings" />
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@drawable/rounded_button_background" />
    </LinearLayout>
</ScrollView>
